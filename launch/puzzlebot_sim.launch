<?xml version="1.0" encoding="UTF-8"?>
    <launch>
        <!-- Bug number -->
        <arg name="bug" default="0"/>
        <arg name="mode" default="sim"/><!-- or real -->

        <!-- World & GUI -->
        <arg name="world_name" default="$(find final_challenge)/worlds/ADJIC_map.world"/>
        <arg name="gui" default="false"/>
        <arg name="pos_x" default="0.25"/>
        <arg name="pos_y" default="1.725"/>
        <arg name="pos_theta" default="0"/>

        <include file="$(find final_challenge)/launch/include/simulation/gazebo.launch">
            <arg name="world_name" value="$(arg world_name)"/>
            <arg name="gui" value="$(arg gui)" />
            <arg name="pos_x" value="$(arg pos_x)"/>
            <arg name="pos_y" value="$(arg pos_y)"/>
            <arg name="pos_theta" value="$(arg pos_theta)"/>
        </include>

        <!-- Arucos Detect -->
        <include file="$(find final_challenge)/launch/include/arucos/arucos_detect_sim.launch"/>

        <!-- Rviz -->
        <include file="$(find final_challenge)/launch/include/rviz/rviz.launch">
            <arg name="mode" value="$(arg mode)"/>
        </include>

        <!-- Nodes -->
        <node pkg="final_challenge" type="aruco_finder.py" name="aruco_finder"/>
        <node pkg="final_challenge" type="odometry.py" name="odometry"/> 
        <!--<node pkg="final_challenge" type="bug$(arg bug).py" name="bug$(arg bug)"/> -->

    </launch>